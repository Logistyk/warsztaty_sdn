---
version: '2'

services:
    router:
        restart: always
        image: router
        volumes:
            - "{{ router_path }}:/opt/router"
            - "{{ config_path }}:/opt/config"
        command: 'python3 -m router.flaskapp.app'
    controller:
        restart: always
        image: controller
        volumes:
            - "{{ controller_path }}:/opt/controller"
            - "{{ config_path }}:/opt/config"
            - "/var/run/docker.sock:/var/run/docker.sock"
        command: 'python3 -m controller.flaskapp.app'
